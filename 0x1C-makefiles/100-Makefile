# Makefile executable deletes and recompilation 

CC = gcc
OBJ = $(SRC:.c=.o)
NAME = school
SRC = main.c school.c
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

clean:
	$(RM) *~ $(NAME)

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:clean oclean

re: oclean all
